generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                String    @id @default(cuid())
  name              String?
  email             String?   @unique
  emailVerified     DateTime?
  image             String?
  passwordHash      String?
  plan              String    @default("starter")
  role              String    @default("user")
  sessionVersion    Int       @default(1)
  passwordChangedAt DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  accounts           Account[]
  sessions           Session[]
  contacts           Contact[]
  campaigns          Campaign[]
  jobs               Job[]
  messages           Message[]
  emails             EmailMessage[]
  authCodes          AuthCode[]
  authEvents         AuthSecurityEvent[]
  aiWorkflowSessions AiWorkflowSession[]
  aiRequestTelemetry AiRequestTelemetry[]
}

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String? @db.Text
  access_token             String? @db.Text
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String? @db.Text
  session_state            String?
  refresh_token_expires_in Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Contact {
  id        String   @id @default(cuid())
  userId    String
  email     String
  name      String?
  status    String   @default("subscribed")
  source    String   @default("manual")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, email])
}

model Campaign {
  id            String         @id @default(cuid())
  userId        String
  name          String
  templateId    String?
  status        CampaignStatus @default(DRAFT)
  audienceCount Int            @default(0)
  scheduledFor  DateTime?
  queuedAt      DateTime?
  startedAt     DateTime?
  sentAt        DateTime?
  failedAt      DateTime?
  errorMessage  String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Job {
  id          String    @id @default(cuid())
  userId      String?
  type        String
  status      JobStatus @default(QUEUED)
  payload     Json
  result      Json?
  error       String?
  attempts    Int       @default(0)
  availableAt DateTime  @default(now())
  startedAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([status, availableAt])
}

model Message {
  id             String      @id @default(cuid())
  userId         String?
  channel        String      @default("chat")
  conversationId String?
  role           MessageRole
  content        String      @db.Text
  metadata       Json?
  createdAt      DateTime    @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([channel, createdAt])
}

model EmailMessage {
  id           String      @id @default(cuid())
  userId       String?
  toEmail      String
  fromEmail    String
  subject      String
  htmlBody     String?     @db.Text
  textBody     String?     @db.Text
  provider     String
  providerId   String?
  status       EmailStatus @default(QUEUED)
  errorMessage String?
  createdAt    DateTime    @default(now())
  sentAt       DateTime?

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
}

model AuthCode {
  id         String    @id @default(cuid())
  userId     String
  purpose    String
  codeHash   String
  expiresAt  DateTime
  consumedAt DateTime?
  createdAt  DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, purpose, createdAt])
  @@index([userId, purpose, codeHash])
  @@index([expiresAt, consumedAt])
}

model AuthSecurityEvent {
  id        String   @id @default(cuid())
  userId    String?
  type      String
  severity  String   @default("info")
  email     String?
  ipAddress String?
  userAgent String?
  metadata  Json?
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
  @@index([email, createdAt])
  @@index([type, createdAt])
}

model AiProviderDailyUsage {
  id        String   @id @default(cuid())
  day       String
  provider  String
  requests  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([day, provider])
  @@index([provider, day])
}

model AiUserDailyUsage {
  id        String   @id @default(cuid())
  day       String
  userId    String
  requests  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([day, userId])
  @@index([userId, day])
}

model AiWorkflowSession {
  id                 String           @id @default(cuid())
  userId             String
  conversationId     String
  state              AiWorkflowState  @default(INTENT_CAPTURE)
  intent             AiWorkflowIntent @default(UNKNOWN)
  selectedTemplateId String?
  recipientStats     Json?
  providerThreadRef  String?
  summary            String?          @db.Text
  contextJson        Json?
  expiresAt          DateTime
  lastActivityAt     DateTime         @default(now())
  archivedAt         DateTime?
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt

  user        User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  checkpoints AiWorkflowCheckpoint[]
  requests    AiRequestTelemetry[]

  @@unique([userId, conversationId])
  @@index([expiresAt])
  @@index([userId, lastActivityAt])
}

model AiWorkflowCheckpoint {
  id        String          @id @default(cuid())
  sessionId String
  state     AiWorkflowState
  payload   Json?
  createdAt DateTime        @default(now())

  session AiWorkflowSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId, createdAt])
  @@index([createdAt])
}

model AiRequestTelemetry {
  id               String   @id @default(cuid())
  requestId        String
  sessionId        String?
  userId           String?
  provider         String
  model            String
  latencyMs        Int?
  tokenIn          Int?
  tokenOut         Int?
  estimatedCostUsd Float?
  status           String
  errorCode        String?
  moderationAction String?
  createdAt        DateTime @default(now())

  session AiWorkflowSession? @relation(fields: [sessionId], references: [id], onDelete: SetNull)
  user    User?              @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([sessionId, createdAt])
  @@index([userId, createdAt])
  @@index([provider, model, createdAt])
  @@index([createdAt])
}

model WaitingList {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  source    String   @default("landing-page")
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum CampaignStatus {
  DRAFT
  SCHEDULED
  QUEUED
  PROCESSING
  SENT
  FAILED
}

enum JobStatus {
  QUEUED
  PROCESSING
  COMPLETED
  FAILED
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}

enum EmailStatus {
  QUEUED
  SENT
  FAILED
}

enum AiWorkflowState {
  INTENT_CAPTURE
  GOAL_BRIEF
  TEMPLATE_DISCOVERY
  TEMPLATE_SELECTED
  CONTENT_REFINE
  AUDIENCE_COLLECTION
  VALIDATION_REVIEW
  SEND_CONFIRMATION
  QUEUED
  COMPLETED
}

enum AiWorkflowIntent {
  UNKNOWN
  NEWSLETTER
  SIMPLE_EMAIL
  SIGNATURE
}
