# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/blastermailer?schema=public"

# Launch mode
WAITLIST_MODE="true"

# Auth.js
AUTH_SECRET="replace-with-long-random-secret"
AUTH_URL="http://localhost:3000"
AUTH_TRUST_HOST=true
NEXTAUTH_SECRET="replace-with-long-random-secret"
NEXTAUTH_URL="http://localhost:3000"

# OAuth providers (optional)
AUTH_GOOGLE_ID=""
AUTH_GOOGLE_SECRET=""
AUTH_GITHUB_ID=""
AUTH_GITHUB_SECRET=""

# Magic link email provider for Auth.js (optional)
AUTH_RESEND_API_KEY=""
AUTH_EMAIL_FROM="blastermailer <no-reply@blastermailer.ai>"

# Transactional email providers
# Recommended for scale: Resend (multi-tenant, high deliverability)
RESEND_API_KEY=""
EMAIL_FROM="blastermailer <no-reply@blastermailer.ai>"
SMTP_HOST="127.0.0.1"
SMTP_PORT="1025"
SMTP_USER=""
SMTP_PASS=""

# Jobs and messaging
REDIS_URL="redis://localhost:6379"
NATS_URL="nats://localhost:4222"
AUTH_CODE_TTL_SECONDS="60"
AUTH_CODE_RESEND_COOLDOWN_SECONDS="30"
SIGNUP_CODE_TTL_SECONDS="60"
SIGNUP_CODE_RESEND_COOLDOWN_SECONDS="60"
AUTH_RATE_LIMIT_DISABLE_IN_DEV="true"
AUTH_RATE_LIMIT_DISABLED="false"

# AI
# `auto` routes requests across enabled API providers with fallback.
AI_PROVIDER="auto"
AI_PROVIDER_PRIORITY="deepseek,llama,openai,anthropic,grok"
AI_PROVIDER_STRICT="false"
AI_FREE_ONBOARDING_ENABLED="true"
AI_FREE_ONBOARDING_PLANS="starter,free,trial"
AI_FREE_REQUIRE_CAPS="true"
AI_FREE_DAILY_PER_USER="20"
AI_FREE_DAILY_OPENAI="0"
AI_FREE_DAILY_ANTHROPIC="0"
AI_FREE_DAILY_DEEPSEEK="0"
AI_FREE_DAILY_GROK="0"
AI_FREE_DAILY_LLAMA="0"
AI_FREE_WEIGHT_OPENAI="0.85"
AI_FREE_WEIGHT_ANTHROPIC="0.75"
AI_FREE_WEIGHT_DEEPSEEK="1.3"
AI_FREE_WEIGHT_GROK="0.65"
AI_FREE_WEIGHT_LLAMA="1.15"

OPENAI_BASE_URL="https://api.openai.com/v1"
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-4.1-mini"

ANTHROPIC_BASE_URL="https://api.anthropic.com/v1"
ANTHROPIC_API_KEY=""
ANTHROPIC_MODEL="claude-3-5-haiku-latest"
ANTHROPIC_MAX_TOKENS="1024"

DEEPSEEK_BASE_URL="https://api.deepseek.com/v1"
DEEPSEEK_API_KEY=""
DEEPSEEK_MODEL="deepseek-chat"

GROK_BASE_URL="https://api.x.ai/v1"
GROK_API_KEY=""
GROK_MODEL="grok-beta"

# Meta Llama API (OpenAI-compatible endpoint expected)
LLAMA_BASE_URL="https://api.llama.com/compat/v1"
LLAMA_API_KEY=""
LLAMA_MODEL="Llama-3.3-70B-Instruct"

# Stripe (webhooks and checkout)
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
STRIPE_WEBHOOK_FORWARD_TO="http://localhost:3000/api/stripe/webhook"
