NODE_ENV=development

# App URLs
AUTH_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
AUTH_TRUST_HOST=true
WAITLIST_MODE=false

# Auth secrets (replace for real environments)
AUTH_SECRET=dev-auth-secret-change-me
NEXTAUTH_SECRET=dev-auth-secret-change-me

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/blastermailer?schema=public

# Queue/cache
REDIS_URL=redis://redis:6379
NATS_URL=nats://nats:4222

# OAuth providers (optional)
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=

# Email (local dev via Mailpit)
SMTP_HOST=mailpit
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
AUTH_EMAIL_FROM=blastermailer <no-reply@blastermailer.local>
EMAIL_FROM=blastermailer <no-reply@blastermailer.local>

# AI provider configuration
# Use API-only providers and prioritize lowest-cost/free-tier-friendly options.
AI_PROVIDER=auto
AI_PROVIDER_PRIORITY=deepseek,llama,openai,anthropic,grok
AI_PROVIDER_STRICT=false
AI_FREE_ONBOARDING_ENABLED=true
AI_FREE_ONBOARDING_PLANS=starter,free,trial
AI_FREE_REQUIRE_CAPS=false
AI_FREE_DAILY_PER_USER=20
AI_FREE_DAILY_OPENAI=0
AI_FREE_DAILY_ANTHROPIC=0
AI_FREE_DAILY_DEEPSEEK=200
AI_FREE_DAILY_GROK=0
AI_FREE_DAILY_LLAMA=150
AI_FREE_WEIGHT_OPENAI=0.85
AI_FREE_WEIGHT_ANTHROPIC=0.75
AI_FREE_WEIGHT_DEEPSEEK=1.3
AI_FREE_WEIGHT_GROK=0.65
AI_FREE_WEIGHT_LLAMA=1.15

OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini

ANTHROPIC_BASE_URL=https://api.anthropic.com/v1
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-haiku-latest
ANTHROPIC_MAX_TOKENS=1024

DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_API_KEY=
DEEPSEEK_MODEL=deepseek-chat

GROK_BASE_URL=https://api.x.ai/v1
GROK_API_KEY=
GROK_MODEL=grok-beta

LLAMA_BASE_URL=https://api.llama.com/compat/v1
LLAMA_API_KEY=
LLAMA_MODEL=Llama-3.3-70B-Instruct

# Optional external email/API providers
AUTH_RESEND_API_KEY=
RESEND_API_KEY=

# OTP
AUTH_CODE_TTL_MINUTES=10
AUTH_CODE_RESEND_COOLDOWN_SECONDS=30

# Stripe webhook testing via stripe-cli container (profile: stripe)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_WEBHOOK_FORWARD_TO=http://host.docker.internal:3000/api/stripe/webhook

